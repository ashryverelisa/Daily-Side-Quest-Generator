@page "/"
@rendermode InteractiveServer

@using DailySideQuestGenerator.Services.Interfaces

@inject IQuestService QuestService

<div class="app-shell">
    <div class="header">
        <h2>Daily Side-Quests</h2>
    </div>

    <div class="card">
        <h3>Progress</h3>
        <div>
            <strong>Level:</strong> @_progress?.Level ?? 1
            <span style="margin-left: 12px;"><strong>Total XP:</strong> @_progress?.TotalXP ?? 0</span>
            <span style="margin-left: 12px;"><strong>Streak:</strong> @_progress?.DailyStreak ?? 0</span>
        </div>
    </div>

    @if (_quests is null)
    {
        <div class="card">Loading...</div>
    }
    else if (!_quests.Any())
    {
        <div class="card">No quests for today.</div>
    }
    else
    {
        @foreach (var quest in _quests)
        {
            <QuestCard Quest="quest" OnToggled="OnToggled"></QuestCard>
        }
    }
</div>