@using DailySideQuestGenerator.Models

<div class="level-display @(ShowAnimation ? "level-up-animation" : "")">
    <div class="level-header">
        <div class="level-icon-container">
            <div class="level-icon">‚öîÔ∏è</div>
            <div class="level-ring"></div>
        </div>
        <div class="level-info">
            <div class="level-title">@LevelInfo.Title</div>
            <div class="level-value">Level @LevelInfo.Level</div>
        </div>
    </div>
    
    <div class="stats-row">
        <div class="stat-item">
            <span class="stat-icon">‚ú®</span>
            <span class="stat-label">Total XP</span>
            <span class="stat-value">@LevelInfo.TotalXp.ToString("N0")</span>
        </div>
        <div class="stat-item">
            <span class="stat-icon">üî•</span>
            <span class="stat-label">Streak</span>
            <span class="stat-value">@LevelInfo.DailyStreak days</span>
        </div>
        @if (LevelInfo.StreakMultiplier > 0)
        {
            <div class="stat-item bonus">
                <span class="stat-icon">‚ö°</span>
                <span class="stat-label">Bonus</span>
                <span class="stat-value">+@LevelInfo.StreakMultiplier%</span>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public LevelInfo LevelInfo { get; set; } = new();
    [Parameter] public bool ShowAnimation { get; set; } = false;
}